#include <iostream>

using namespace std;

int factorial(int n);

int main()
{
	int fact, n;
	cout << "ingrese el valor de n: ";
	cin >> n;
	fact = factorial(n);
	cout << "el factorial de un numero es:" << fact;
}

int factorial(int n) {
	if (n == 0)
		return 1;
	else
		return factorial(n - 1) * n;

}
